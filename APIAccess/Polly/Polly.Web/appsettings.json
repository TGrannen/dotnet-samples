{
  "AllowedHosts": "*",
  "TestOptions": {
    "DelayTime": "00:00:00.01",
    "ThrowException": false,
    "ReturnFalse": false
  },
  "FlakyServerUri": "https://localhost:5011",
  "Resiliency": {
    "RetryOptions": {
      "Retry": {
        "BackoffType": "Exponential",
        "UseJitter": false,
        "Delay": "00:00:01",
        "MaxRetryAttempts": 7
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Polly": "Warning"
      }
    },
    "WriteTo": {
      "ConsoleSink": {
        "Name": "Console"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "ResilienceTest"
    }
  }
}