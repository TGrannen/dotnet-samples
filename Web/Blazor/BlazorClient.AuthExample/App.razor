<Fluxor.Blazor.Web.StoreInitializer/>

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <MudProgressCircular Size="Size.Large" Indeterminate="true"></MudProgressCircular>
                    <MudText Typo="Typo.body1">Determining session state, please wait...</MudText>
                </Authorizing>
                <NotAuthorized>
                    <LoginWatcher></LoginWatcher>
                    <MudText Typo="Typo.h4">Sorry</MudText>
                    <MudAlert Severity="Severity.Warning">You're not authorized to reach this page. You need to log in.</MudAlert>
                    <LoginButton></LoginButton>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Warning">Sorry, there's nothing at this address.</MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>